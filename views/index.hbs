<!-- ./views/index.handlebars -->
<link rel="stylesheet" href="/stylesheets/index.css">
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">搜尋餐廳</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳名稱或類別" aria-label="Restaurant Name..."
                 value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
        {{{ noValidResults}}}
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurant}}
        <a href="/restaurants/{{this.id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name_en}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
            
            <div class="d-flex justify-content-center mb-3">
              <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                <a class="btn btn-primary" href="./restaurants/{{this._id}}" role="button">Detail</a>
                <a class="btn btn-warning" href="./restaurants/{{this._id}}/edit" role="button">Edit</a>
                <form action="./restaurants/{{this._id}}/delete" method="POST" style="display: inline;">
                  <button class="btn-danger"type="submit">delete</button>
                </form>
              </div>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>