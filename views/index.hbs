<!-- ./views/index.handlebars -->
<link rel="stylesheet" href="/stylesheets/index.css">
<!-- search bar -->
<div class="container search-bar">
  <div class="row justify-content-between">
    <div class="searching mt-3 col-sm-4 col-8-12">
      <form action="/search">
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳名稱或類別" aria-label="Restaurant Name..."
                value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>

    <div class="sort mt-3 col-sm-2 col-12">
      <form action="/restaurants/sort">
        <select class="custom-select" name="sort" onchange="submit()">
          <option selected>sorting</option>
          <option value="nameEnAsc">A->Z</option>
          <option value="nameEnDesc">Z->A</option>
          <option value="category">類別</option>
          <option value="location">地區</option>
          <option value="rating">評分</option>
        </select>
      </form>
    </div>
  </div>
</div>


<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
        {{{ noValidResults}}}
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurant}}
        <a href="/restaurants/{{this.id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name_en}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>

            <div class="card-body d-flex justify-content-end">
              <a class="card-link" href="./restaurants/{{this._id}}" role="button">Detail</a>
              <a class="card-link" href="./restaurants/{{this._id}}/edit" role="button">Edit</a>
              <form class="ml-2" action="./restaurants/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
                <button class="btn-danger" type="submit">delete</button>
              </form>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>